{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "declaration": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "jsx": "react"
  },
  "exclude": ["./node_modules"],
  "include": ["./src"]
}
